<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.chatnearby">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".messages.LatestMessagesActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".account.RegisterActivity"
                android:configChanges="orientation|keyboard|screenSize"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".account.LoginActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".messages.NewMessageActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".messages.LatestMessagesActivity"/>
        </activity>
        <activity
                android:name=".messages.ChatLogActivity"
                android:screenOrientation="portrait">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value=".messages.LatestMessagesActivity"/>
        </activity>
    </application>

</manifest>
